@model IEnumerable<ToDoList.Data.ToDo>
@{
    ViewBag.Title = "Index";
}



<html>
<head>
    <title>ToDo</title>
</head>
<body>
    <h2>To Do</h2>
    <a href="./ToDo/Create" class="btn btn-info" role="button">AddNewTodo</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Title</td>
                <td>Priority</td>
                <td>Date</td>
                <td>Status</td>
            </tr>
        </thead>
        @foreach (var todo in Model)
        {

            <tbody>
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.PriorityType.Name</td>
                    <td>@todo.Date</td>
                    <td>@todo.IsDone</td>
                    <td>
                        <div class="form-check">
                            <label>
                                <input type="checkbox" id="ToDo.IsDone" name="ToDo.IsDone" value="@todo.IsDone">Done
                            </label>
                        </div>
                    </td>
                    <td><a class="btn btn-warning" role="button" href="./ToDo/Update/@todo.Id">Edit</a></td>
                    <td><a class="btn btn-primary" role="button" href="./ToDo/Details/@todo.Id">Details</a></td>
                    <td><a class="btn btn-danger" role="button" href="./ToDo/Delete/@todo.Id">Delete</a></td>




                </tr>
            </tbody>
        }
    </table>
</body>
</html>
