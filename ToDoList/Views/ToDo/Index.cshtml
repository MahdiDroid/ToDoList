@model IEnumerable<ToDoList.Data.ToDo>
@{
    ViewBag.Title = "Index";
}



<html>
<head>
    <title>ToDo</title>
</head>
<body>
    <h2>To Do</h2>
    <a href="/ToDo/Create" class="btn btn-info" role="button">AddNewTodo</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Title</td>
                <td>Priority</td>
                <td>Status</td>
            </tr>
        </thead>
        @foreach (var todo in Model)
        {

            <tbody>
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.PriorityType.Name</td>
                    <td>@todo.IsDone</td>
                    <td >
                        <div class="form-check">
                         <label>
                               <input type="checkbox"   id="ToDo.IsDone" name="ToDo.IsDone" value="@todo.IsDone">Done 
                         </label>
                        </div>
                    </td>

                </tr>
            </tbody>
        }
    </table>
</body>
</html>
